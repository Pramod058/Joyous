<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Journal Page Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Journal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <!-- Title Input for Journal -->
    <EditText
        android:id="@+id/editTextJournalTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Journal Title"
        android:inputType="text"
        android:paddingBottom="16dp" />

    <!-- Text Area for Writing the Journal Content -->
    <EditText
        android:id="@+id/editTextJournalContent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Write your journal..."
        android:gravity="top"
        android:inputType="textMultiLine" />

    <!-- Save Button -->
    <Button
        android:id="@+id/buttonSaveJournal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Save"
        android:layout_marginTop="16dp" />
</LinearLayout>
